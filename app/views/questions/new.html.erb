<center>
<div class="card card-back">
	<div class="logo">
	</div>
	
	<div class="category">
	</div>
	
	<div class="caption">
		Card Back
	</div>
	
	<div class="qrcode">
		<center>
			<%= image_tag "qrcode.png" %>
	
	</div>
</div>

<div class="inputs">
	<%= form_for(@question) do |q| %>
		<% if @question.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@question.errors.count, "error") %></h2>
				<ul>
					<% @question.errors.full_messages.each do |m| %>
						<li><%= m %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
	
		<%= q.label :question %><br />
		<%= q.text_area :question %>
		
		<%= q.label :hint %><br />
		<%= q.text_area :hint %>
		
		<%= q.label :answer %><br />
		<%= q.text_area :answer %>
		
		<%= q.label :category %><br />
		<%= q.text_field :category %>
		
		<%= q.label :details %><br />
		<%= q.text_area :details %>
		
		<%= q.label :reference %><br />
		<%= q.text_area :reference %>
		
		<%= q.submit "Submit for Approval", :class => 'submit' %>
	<% end %>
</div>

<div class="card card-front">
	<div class="question">
	</div>
	
	<div class="hint">
	</div>
	
	<div class="answer-block">
		<div class="answer">
		</div>
		
		<div class="details">
		</div>
		
		<div class="reference">
		</div>
	</div>
	
	<div class="caption">
		Card Face
	</div>
</div>
</center>

